{
	"name": "vscode-view-rax-explorer",
	"displayName": "View Rax Explorer",
	"description": "Add a view in Rax Activity Bar that shows the project file explorer.",
	"publisher": "Rax",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/raxjs/rax-vscode-extensions.git"
	},
	"icon": "assets/logo.png",
	"activationEvents": [
		"onView:raxExplorer"
	],
	"main": "./src/index.js",
	"contributes": {
		"commands": [
			{
				"command": "rax.views.explorer.refresh",
				"title": "Refresh Explorer",
				"category": "Rax",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			},
			{
				"command": "rax.views.explorer.addComponent",
				"title": "Add Rax Component",
				"category": "Rax",
				"icon": {
					"light": "assets/light/add.svg",
					"dark": "assets/dark/add.svg"
				}
			},
			{
				"command": "rax.views.explorer.addPage",
				"title": "Add Rax Page",
				"category": "Rax",
				"icon": {
					"light": "assets/light/add.svg",
					"dark": "assets/dark/add.svg"
				}
			},
			{
				"command": "rax.views.explorer.editPageConfig",
				"title": "Edit Rax Page Config",
				"category": "Rax",
				"icon": {
					"light": "assets/light/edit.svg",
					"dark": "assets/dark/edit.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rax",
					"title": "Rax",
					"icon": "assets/viewIcon.png"
				}
			]
		},
		"views": {
			"rax": [
				{
					"id": "raxExplorer",
					"name": "Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "rax.views.explorer.refresh",
					"when": "view == raxExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rax.views.explorer.addComponent",
					"when": "viewItem == Components",
					"group": "inline@1"
				},
				{
					"command": "rax.views.explorer.addPage",
					"when": "viewItem == Pages",
					"group": "inline@1"
				},
				{
					"command": "rax.views.explorer.editPageConfig",
					"when": "viewItem == page",
					"group": "inline@1"
				},
				{
					"command": "rax.views.explorer.addComponent",
					"when": "viewItem == component",
					"group": "1_modification"
				},
				{
					"command": "rax.views.explorer.addPage",
					"when": "viewItem == page",
					"group": "1_modification"
				}
			]
		}
	},
	"dependencies": {
		"fs-extra": "^8.1.0"
	}
}