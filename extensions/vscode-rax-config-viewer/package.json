{
	"name": "vscode-rax-config-viewer",
	"displayName": "Rax Config Viewer",
	"description": "A viewer for Rax project config file, such as build.json",
	"publisher": "Rax",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"icon": "assets/logo.png",
	"activationEvents": [
		"onCommand:rax.showProjectConfig"
	],
	"main": "./src/index.js",
	"contributes": {
		"commands": [
			{
				"command": "rax.showProjectConfig",
				"title": "Show Rax project config",
				"category": "Rax",
				"icon": {
					"light": "assets/logo.png",
					"dark": "assets/logo.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "rax.showProjectConfig",
					"when": "!config.configViewer.hideEditorTitle",
					"group": "navigation@1"
				}
			],
			"editor/context": [
				{
					"command": "rax.showProjectConfig",
					"when": "resourceFilename == build.json",
					"group": "Rax"
				}
			],
			"explorer/context": [
				{
					"command": "rax.showProjectConfig",
					"when": "resourceFilename == build.json",
					"group": "Rax"
				}
			]
		}
	},
	"configuration": {
		"type": "object",
		"title": "Rax Config Viewer",
		"properties": {
			"configViewer.hideEditorTitle": {
				"type": "boolean",
				"default": false,
				"scope": "window",
				"description": "Whether to display the icon of Rax Config Viewer"
			}
		}
	},
	"scripts": {
		"build": "cd client && build-scripts build",
		"start": "cd client && build-scripts start"
	},
	"dependencies": {
		"ejs": "^3.0.1",
		"rax": "^1.1.0",
		"rax-app": "^2.0.0",
		"rax-document": "^0.1.0"
	},
	"devDependencies": {
		"build-plugin-rax-multi-pages": "^0.1.2",
		"build-plugin-rax-app": "^2.0.0",
		"@alib/build-scripts": "^0.1.0"
	}
}